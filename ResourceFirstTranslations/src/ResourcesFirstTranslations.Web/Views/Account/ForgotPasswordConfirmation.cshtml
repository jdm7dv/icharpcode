@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Forgot Password Confirmation";
}

<div class="col-md-12 col-sm-12 col-lg-12 paddingTop">
    <section id="passwortConfirmation">
        <form>
            <div class="widget">
                <div class="widget-head">
                    <div class="page-title pull-left ng-binding">@ViewBag.Title</div>
                    <div class="clearfix"></div>
                </div>
                <div class="widget-content text-info">
                    <div class="col-sm-12 col-md-12 col-lg-12 paddingTopFirst">
                        <label class="col-sm-12 col-md-12 col-lg-12 control-label nopadding">Please check your email to reset your password.</label>
                    </div>
                </div>
                <div class="widget-foot">
                    <div class="clearfix"></div>
                </div>
            </div>
        </form>
    </section>
</div>

