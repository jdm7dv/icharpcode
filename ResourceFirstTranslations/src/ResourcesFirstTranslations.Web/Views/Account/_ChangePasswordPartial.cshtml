@using Microsoft.AspNet.Identity
@model ResourcesFirstTranslations.Web.Models.ManageUserViewModel

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="widget">
        <div class="widget-head">
            <div class="page-title pull-left ng-binding">@ViewBag.Title.</div>
            <small class="pull-right page-title-subtle">You're logged in as @User.Identity.GetUserName()</small>
            <div class="clearfix"></div>
        </div>
        <div class="widget-content text-info">
            <div class="col-sm-12 col-md-12 col-lg-12 paddingTopFirst">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-3 col-md-2 col-lg-2 control-label nopadding" })
                <div class="col-sm-9 col-md-10 col-lg-6 nopadding">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-sm" })
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 paddingTop">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-3 col-md-2 col-lg-2 control-label nopadding" })
                <div class="col-sm-9 col-md-10 col-lg-6 nopadding">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-sm" })
                </div>

            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 paddingTop">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 col-md-2 col-lg-2 control-label nopadding" })
                <div class="col-sm-9 col-md-10 col-lg-6 nopadding">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm" })
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 paddingTop">
                <div class="col-sm-12 col-md-12 col-lg-12 nopadding">
                    <input type="submit" value="Change password" class="btn btn-default" />
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 paddingTop text-success">
                @ViewBag.StatusMessage
            </div>
        </div>
        <div class="widget-foot">
            <div class="clearfix"></div>
        </div>
    </div>


    @Html.ValidationSummary()



}
